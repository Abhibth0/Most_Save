<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".ui.fragments.SettingsFragment">

        <TextView
            android:id="@+id/text_view_appearance_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Appearance"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:padding="8dp"
            android:drawableStart="@drawable/ic_appearance"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/text_view_security_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/setting_label_security"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:padding="8dp"
            android:drawableStart="@drawable/ic_security"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/text_view_advance_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/setting_label_advance"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:padding="8dp"
            android:drawableStart="@drawable/ic_settings"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/text_view_about_most_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About MostSave"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:padding="8dp"
            android:drawableStart="@drawable/ic_info"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"/>

    </LinearLayout>
</layout>
