<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_view_theme_settings_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Theme"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_theme_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="@string/setting_dark_mode"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />

        <TextView
            android:id="@+id/text_view_dark_mode_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dark mode reduces eye strain in low light conditions and saves battery on devices with OLED screens."
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:alpha="0.5"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="24dp"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_use_custom_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="Use Custom Color Theme"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />

        <TextView
            android:id="@+id/text_view_custom_color_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/use_custom_color_theme_description"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:alpha="0.5"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="24dp"/>

        <LinearLayout
            android:id="@+id/color_options_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_color_settings_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/select_color"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <!-- Fixed layout for color picker with default color fixed and other colors scrollable -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Mask view to prevent colors from showing on the left of default color -->
                <View
                    android:id="@+id/mask_view"
                    android:layout_width="48dp"
                    android:layout_height="64dp"
                    android:background="?android:colorBackground"
                    android:layout_alignParentStart="true"/>

                <!-- Horizontal scrollable colors that start after default color -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:layout_marginStart="64dp">

                    <LinearLayout
