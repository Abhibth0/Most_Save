                                android:layout_gravity="center"
                                android:src="@drawable/ic_check"
                                android:visibility="gone"
                                android:id="@+id/icon_brown_selected"
                                android:contentDescription="@string/selected"/>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/color_grey"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:cardCornerRadius="24dp"
                            app:cardBackgroundColor="#9E9E9E"
                            android:layout_margin="8dp"
                            app:strokeColor="@color/black"
                            app:strokeWidth="0dp">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_check"
                                android:visibility="gone"
                                android:id="@+id/icon_grey_selected"
                                android:contentDescription="@string/selected"/>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/color_blue_grey"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:cardCornerRadius="24dp"
                            app:cardBackgroundColor="#607D8B"
                            android:layout_margin="8dp"
                            app:strokeColor="@color/black"
                            app:strokeWidth="0dp">
                            <ImageView
                                android:layout_width="24dp"
