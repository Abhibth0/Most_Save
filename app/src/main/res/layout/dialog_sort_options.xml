<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/sort_a_to_z"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sort_a_to_z"
        android:padding="12dp"
        android:textSize="16sp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"/>

    <TextView
        android:id="@+id/sort_z_to_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sort_z_to_a"
        android:padding="12dp"
        android:textSize="16sp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"/>

    <TextView
        android:id="@+id/sort_newest_to_oldest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sort_newest_to_oldest"
        android:padding="12dp"
        android:textSize="16sp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"/>

    <TextView
        android:id="@+id/sort_oldest_to_newest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sort_oldest_to_newest"
        android:padding="12dp"
        android:textSize="16sp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"/>

</LinearLayout>
